<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/font_color_gray</item>
        <item name="android:textColorHint">@color/font_color_gray</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="PeachButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/pink_peach_button_selector</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">regular</item>
        <item name="android:textColor">@drawable/pink_peach_button_text_color_selector</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PeachButton.TransparentPeachButton">
        <item name="android:background">@drawable/transparent_peach_button_selector</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:textColor">@color/font_color_gray</item>
    </style>

    <style name="PeachButton.GreenPeachButton">
        <item name="android:background">@drawable/green_peach_button_selector</item>
        <item name="android:layout_width">110dp</item>
    </style>
</resources>
