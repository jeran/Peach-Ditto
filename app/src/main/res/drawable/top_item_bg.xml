<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="@dimen/item_corner_radius"
                android:topRightRadius="@dimen/item_corner_radius" />
            <stroke
                android:width="@dimen/item_border_thickness"
                android:color="@color/item_border" />
        </shape>
    </item>
    <item
        android:top="@dimen/item_border_thickness"
        android:left="@dimen/item_border_thickness"
        android:right="@dimen/item_border_thickness">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="@dimen/item_corner_radius"
                android:topRightRadius="@dimen/item_corner_radius" />
        </shape>
    </item>
</layer-list>
