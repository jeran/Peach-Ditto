<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="8dp"
        android:left="@dimen/item_border_thickness"
        android:right="@dimen/item_border_thickness">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
            <stroke
                android:width="@dimen/item_border_thickness"
                android:color="@color/itemBorder" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/item_border_thickness"
        android:left="@dimen/item_border_thickness"
        android:right="@dimen/item_border_thickness"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>
</layer-list>
