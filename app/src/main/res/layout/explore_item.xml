<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:layout_marginLeft="@dimen/recycler_view_margin"
    android:layout_marginRight="@dimen/recycler_view_margin"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="15dp"
    tools:context=".ui.activities.HomeActivity">

    <ImageView
        android:id="@+id/explore_item_profile_image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/explore_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="lucas" />

        <TextView
            android:id="@+id/explore_item_last_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            tools:text="my diet consists mainly of chocolates and coconuts" />

        <TextView
            android:id="@+id/explore_item_time_since_last_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            tools:text="7 hours ago" />
    </FrameLayout>
</LinearLayout>
